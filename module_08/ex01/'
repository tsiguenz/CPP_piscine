#include <iostream>
#include <algorithm>
#include "Span.hpp"

int	main() {
	try {
		Span	span1(100);
		Span	span2(100);

		for (int i = 0; i < 50; i++)
			span1.addNumber(i);
		for (int i = 0; i < 100; i++)
			span2.addNumber(i);
		std::cout << span[0] << std::endl;
		std::cout << span.shortestSpan() << std::endl;
	}
	catch (std::exception& e) {
		std::cerr << e.what() << std::endl;
	}
	return (0);
}
